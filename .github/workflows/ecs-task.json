{
    "family": "$ECS_TASK_DEFINITION",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "my-container",
            "image": "your-container-image-url",
            "cpu": 1,
            "memory": 2,
            "memoryReservation": 1,
            "portMappings": [
                {
                    "containerPort": 8000
                }
            ],
            "essential": true,
            "command": [
                "echo",
                "command properly passed!"
            ]
        }
    ]
}